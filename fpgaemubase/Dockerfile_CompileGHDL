# syntax=docker/dockerfile:1
# FROM ubuntu:focal
FROM python:3.10-slim-bookworm

# ADD ./ghdl-3.0.0 /home/ghdl-3.0.0

#ADD https://github.com/ghdl/ghdl/archive/refs/tags/v4.0.0.tar.gz /home
ADD https://github.com/ghdl/ghdl/archive/refs/tags/v5.1.1.tar.gz /home

RUN apt-get update && apt-get install -y clang llvm libz-dev gcc make gnat

WORKDIR /home

RUN tar -xvf v5.1.1.tar.gz > /dev/null && \
    rm v5.1.1.tar.gz && \
    cd /home/ghdl-5.1.1 && \
    ./configure --prefix=/home/ghdl/local --with-llvm-config && \
    make && \
    make install && \
    cd /home && \
    rm /home/ghdl-5.1.1 -rf && \
    cd /home/ghdl/local && \
    tar -zcvf /home/builtghdl5.tar.gz . > /dev/null && \
    apt-get remove -y clang libz-dev make gnat && \
    apt-get autoremove -y && \
    apt-get clean

WORKDIR /home
